
<div class="container-fluid h-100">

    <div class="row justify-content-center text-center text-white py-3">

        <h1 class="text-light mb-3">{{rightDebtor.nameShow}}</h1>

        <div class="col-11 col-lg-4">
            <div class="table-responsive">
                <table class="table table-bordered text-light">
                    <thead class="align-middle" style="background-color: rgba(69, 69, 69, 0.251);">
                        <tr>
                            <th scope="col" data-bs-toggle="tooltip" title="Total">Total</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <tr>
                            <td class="{{rightDebtor.totalAux}}">{{rightDebtor.total}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-12 col-lg-11">
            <div class="table-responsive">
                <table class="table table-sm table-bordered text-light">
                    <thead class="align-middle" style="background-color: rgba(69, 69, 69, 0.251);">
                        <tr>
                            <th scope="col">Data</th>
                            <th scope="col">Info</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Acumulado</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle" style="background-color: rgba(0, 0, 0, 0.5);">
                        {{#each allBillsDebtor}}

                            <tr class="oneBill">
                                
                                <td>{{date}}<input class="d-none" value="{{dateInput}}" disabled></td>
                                <td>{{info}}</td>
                                <td class="{{valueAux}}">{{value}}</td>
                                <td class="{{accumulatedValueAux}}">{{accumulatedValue}}</td>
                            </tr>

                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>